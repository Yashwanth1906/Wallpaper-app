{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" for older projects
    "target": "es6",    // or a more recent version like "esnext"
    "module": "commonjs" // or "esnext" if you're using ES modules
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
